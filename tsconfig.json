{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,  
      "isolatedModules": true,   
      "moduleResolution": "node"  
    },
    "include": ["./index.ts"],
    "exclude": ["node_modules"]
  }
  